class GalleryImage < ActiveRecord::Base
  belongs_to :gallery

  has_attached_file :image, :styles => { :thumbnail => "80x63#", :small => "150x150>", :large => "800x600>" },
      :url => "/assets/gallery_images/:id/:style/:basename.:extension",
      :path => ":rails_root/public/assets/gallery_images/:id/:style/:basename.:extension"
  validates_attachment_presence :image
  has_images
end
