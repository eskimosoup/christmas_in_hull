<% hide_left %>
<% title "News" %>

<h1><%= h(@article.headline) %></h1>

<span class="date"><%= h(simple_date_format(@article.date)) %></span>

<% if @article.image? %>
  <%= image_tag @article.image.url(:show), :class => "image_right", :alt => @article.image_alt %>
<% end %>

<%= @article.main_content %>

<p>
  <%= @article.tag_list.collect{|x| link_to(x.to_s, articles_path(:tag => x.to_s)) }.join(' | ') %>
</p>

<div class="hr"><hr /></div>

<p>
  <%= link_to "View all Articles", articles_path %>
</p>

<% content_for :right do  %>
	<div class="news_nav">
		<%= render :partial => "tags" %>
		<%= render :partial => "dates" %>
		<%#= render "/shared/advert" %>
	</div>
<% end %>
