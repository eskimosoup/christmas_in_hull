<% content_for :head do %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js' %>
  <%= javascript_include_tag 'https://cdn.jsdelivr.net/colorbox/1.6.3/jquery.colorbox-min.js' %>
  <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/jquery.matchHeight/0.6.0/jquery.matchHeight-min.js' %>
  <%= stylesheet_link_tag 'colorbox.css' %>
  <script>
    $(function() {
      $('.event-gallery').colorbox({
        rel: 'gallery'
      });
      $('.event-gallery').matchHeight();
    });
  </script>
<% end %>

<% content_for :left do %>
  <h2><%= link_to "View Events", events_path %></h2>
  <% unless @galleries.blank? %>
    <ol>
      <% @galleries.each do |gallery| %>
        <li>
          <%= link_to gallery.name, gallery_path(gallery) %>
        </li>
      <% end %>
    </ol>
  <% end %>
<% end %>

<h1><%= @gallery.name %></h1>

<% if @gallery.event %>
  <p>
    <%= link_to "View Event", event_path(@gallery.event) %>
  </p>
<% end %>

<div>
  <%= raw @gallery.summary %>
</div>

<% unless @gallery.gallery_images.count(:conditions => ["display = ?", true]).zero? %>
  <% @gallery.gallery_images.all(:conditions => ["display = ?", true]).each_with_index do |gallery_image, i| %>
    <%= link_to(
    image_tag(gallery_image.image(:small), { :class => 'event-gallery-image', :alt => gallery_image.image_alt, :id => "gallery-image-#{i}" }),
    gallery_image.image.url(:large), { :rel => "gallery", :title => gallery_image.image_alt, :class => "event-gallery" } ) %>
  <% end %>
<% end %>

<div class="clear"></div>
