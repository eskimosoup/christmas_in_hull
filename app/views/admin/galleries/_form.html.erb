<% form_for [:admin, @gallery], :html => { :multipart => true } do |f| %>

  <%= f.error_messages %>

  <fieldset>
    <legend>Main Information</legend>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :summary %><br />
      <%= f.text_area :summary %>
    </p>

    <p>
      <%= f.label :event_id %><br />
      <%= f.select :event_id, Event.all(:order => :name).map{ |x| [x.name, x.id] } %>
  </fieldset>

  <p>
    <%= f.check_box :display %>
    <%= f.label :display %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>

<% end %>
