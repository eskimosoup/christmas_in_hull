<li>
  <% link_options = {} %>
  <% if @current_page_node && @current_page_node == node %>
    <% link_options.merge!(:class => "highlight") %>
  <% end %>
  <% if node.access_key? %>
    <% link_options.merge!(:accesskey => node.access_key) %>
  <% end %>
  <%= link_to h(node.navigation_title), url_for(node.path), link_options %>
</li>