<% title("Offers") %>

<p><%= link_to "New offer", new_admin_offer_path %></p>

<% form_tag admin_offers_path, :method => :get do %>
  <div class="field">
    <%= label_tag :keywords %><br />
    <%= text_field_tag :keywords %>
  </div>

  <div class="actions">
    <%= submit_tag 'Search' %>
  </div>
<% end %>

<%= eskimo_table({:columns => ["company_name", ["Summary", lambda{|a| brev(a.summary, 50)}, "summary"], ["website", lambda{|offer| link_to(offer.website, offer.website, {:popup => true})}], "postcode", ["Display", lambda{|x| x.display? ? 'Yes' : 'No' }, "display"], ["", lambda{|offer| link_to(image_tag("/images/maps.jpg"), "http://maps.google.co.uk/maps?q=#{offer.postcode}", {:popup => true})}, ""]], :list => @offers, :images => true}) %>
